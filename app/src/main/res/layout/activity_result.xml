<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@color/main_bgc">

    <View
        android:id="@+id/resultViewClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        android:background="@drawable/close_icon"
        android:layout_marginVertical="20dp"
        />

    <View
        android:id="@+id/resultView"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:background="@drawable/score_page_design"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mainCongAnim"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="@id/resultView"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        android:layout_marginTop="10dp"
        app:lottie_rawRes="@raw/congratulations_top"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />
    <TextView
        android:id="@+id/resultViewCongTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainCongAnim"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        android:text="Congrats!"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textStyle="bold"
        android:fontFamily="@font/advent_pro_medium"
        android:layout_marginVertical="8dp"
        />
<!--    For Art Nature result TV-->
    <TextView
        android:id="@+id/resultViewScoreTVForAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        tools:text="95% Score"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:layout_constraintTop_toBottomOf="@id/resultViewCongTxt"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textColor="@color/score_text"
        android:includeFontPadding="false"
        />

<!--    For General Knowledge Result TV-->
    <TextView
        android:id="@+id/resultViewScoreTVForGK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="95% Score"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:layout_constraintTop_toBottomOf="@id/resultViewCongTxt"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textColor="@color/score_text"
        android:includeFontPadding="false"
        />
<!--    For Science Nature Result TV-->
    <TextView
            android:id="@+id/resultViewScoreTVForSNA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="95% Score"
            app:layout_constraintEnd_toEndOf="@id/resultView"
            app:layout_constraintStart_toStartOf="@id/resultView"
            app:layout_constraintTop_toBottomOf="@id/resultViewCongTxt"
            android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
            android:textColor="@color/score_text"
            android:includeFontPadding="false"
            />

<!--    For Tech Gadget Result-->

    <TextView
        android:id="@+id/resultViewScoreTVForTechGadget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="95% Score"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:layout_constraintTop_toBottomOf="@id/resultViewCongTxt"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textColor="@color/score_text"
        android:includeFontPadding="false"
        />

    <!--    For Coding Result-->
    <TextView
        android:id="@+id/resultViewScoreTVForCoding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="95% Score"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:layout_constraintTop_toBottomOf="@id/resultViewCongTxt"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textColor="@color/score_text"
        android:includeFontPadding="false"
        />

<!--    For society result-->
    <TextView
        android:id="@+id/resultViewScoreTVForSociety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="95% Score"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:layout_constraintTop_toBottomOf="@id/resultViewCongTxt"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textColor="@color/score_text"
        android:includeFontPadding="false"
        />

    <TextView
        android:id="@+id/resultViewTV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Quiz Completed Successfully"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:layout_constraintTop_toBottomOf="@id/resultViewScoreTVForGK"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:includeFontPadding="false"
        />
    <TextView
        android:id="@+id/resultViewTV4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Thanks for participate.Your score is too good. Keep it up. You should participate next level quiz. Best of luck."
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:layout_constraintTop_toBottomOf="@id/resultViewTV3"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:layout_marginVertical="10dp"
        />
    <TextView
        android:id="@+id/resultViewTV5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Join with us: "
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="@id/resultViewTV3"
        app:layout_constraintTop_toBottomOf="@id/resultViewTV4"
        android:textSize="20sp"
        android:textColor="@color/minus_black"
        android:includeFontPadding="false"
        android:layout_marginVertical="35dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/resultViewTV5"
        app:layout_constraintTop_toTopOf="@id/resultViewTV5"
        app:layout_constraintBottom_toBottomOf="@id/resultViewTV5"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/facebook_icon"
            android:layout_marginRight="5dp"
            />
         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/whatsapp_icon"
            android:layout_marginHorizontal="5dp"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/instagram_icon"
            android:layout_marginHorizontal="5dp"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/linkedin_icon"
            android:layout_marginHorizontal="5dp"
            />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="@id/resultView"
        app:layout_constraintEnd_toEndOf="@id/resultView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/resultView"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/congratulations_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>